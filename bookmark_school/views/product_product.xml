<odoo>
    <record id="view_product_template_form_inherit" model="ir.ui.view">
        <field name="name">product.template.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <field name="categ_id" position="after">
                <field name="school_id"/>
            </field>
        </field>
    </record>

    <record id="sale_form_inherited" model="ir.ui.view">
        <field name="name">sale.form.inherited</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//tree[1]" position="inside">
                <field name="price_total"/>
                <field name="school_id"/>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="phone"/>
                <field name="email"/>
                <field name="preferred_delivery_date"/>
            </xpath>

        </field>
    </record>

    <record id="ecommerce_cat_inherited" model="ir.ui.view">
        <field name="name">ecommerce_cat_inherited</field>
        <field name="model">product.public.category</field>
        <field name="inherit_id" ref="website_sale.product_public_category_form_view"/>
        <field name="arch" type="xml">
            
            <xpath expr="//field[@name='name']" position="after">
                
                <field name="is_list"/>
            </xpath>

        </field>
    </record>
    
</odoo>
